{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@components/*": ["./components/*"],
            "@config/*": ["./config/*"],
            "@styles/*": ["./styles/*"],
            "@material/*": ["config/theme/*"],
            "@schema": ["./schema/index.ts"],
            "@interface/*": ["./interface/*"],
            "@public/*": ["./public/*"],
            "@utils": ["./utils/index.ts"],
            "@atom": ["./atoms/index.ts"],
            "@hooks/*": ["./hooks/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "components/ui/HeaderForm"
    ],
    "exclude": ["node_modules"]
}
